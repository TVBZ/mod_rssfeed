<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>RSS Feed</name>
    <description>Display RSS feed frome external source</description>
    <version>1.0.0</version>
    <creationDate>June 2020</creationDate>
    <author>Tom F. Vanbrabant</author>
    <authorEmail>vanbrabant.tom@gmail.com</authorEmail>
    <authorUrl>https://github.com/TVBZ/mod_rssfeed</authorUrl>
    <creationDate>June 2020</creationDate>
    <copyright>Tom F. Vanbrabant</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl.html</license>
    <files>
        <filename>mod_rssfeed.xml</filename>
        <filename module="mod_rssfeed">mod_rssfeed.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
        <folder>helpers</folder>
    </files>
    <updateservers>
        <server type="extension" priority="1" name="RSS Feed">https://github.com/TVBZ/mod_rssfeed/blob/master/update.xml</server>
    </updateservers>
    <config>
        <fields name="params">
		<fieldset name="basic">
              <field
                    name="source"
                    type="text"
                    required="true"
                    label="Feed url"
                    description=""
                    default="http://feeds.feedburner.com/JoomlaAnnouncements?format=xml"
              />

              <field 
                     name="spacer1"
                     type="spacer"
                     hr="true"
                     label=""/>           

               <field 
                     name="channel" 
                     type="radio" 
                     required="true"
                     class="btn-group btn-group-yesno" 
                     default="1" 
                     label="Show channel title" 
                     description="">
                     <option value="0">JHIDE</option>
                     <option value="1">JSHOW</option>
               </field>

               <field 
                     name="linktitle" 
                     type="radio" 
                     required="true"
                     class="btn-group btn-group-yesno" 
                     default="1" 
                     label="Link feed title" 
                     description="">
                     <option value="0">JNO</option>
                     <option value="1">JYES</option>
               </field>

               <field 
                     name="readmore" 
                     type="radio" 
                     required="true"
                     class="btn-group btn-group-yesno" 
                     default="1" 
                     label="Add read more" 
                     description="">
                     <option value="0">JHIDE</option>
                     <option value="1">JSHOW</option>
               </field>

               <field 
                     name="target" 
                     type="radio" 
                     required="true"
                     class="btn-group btn-group-yesno" 
                     default="1" 
                     label="Open in new tab" 
                     description="">
                     <option value="0">JNO</option>
                     <option value="1">JYES</option>
               </field>

            </fieldset>
            
       </fields>
    </config>
</extension>